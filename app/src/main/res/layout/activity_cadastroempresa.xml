<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".cadastroempresa">
    
    
    
    <TextView
        android:id="@+id/title_cadastrarempresa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cadastrar Empresa"
        android:textSize="45sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_margin="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <View
        android:id="@+id/ContainerComponents"
        style="@style/ContainerComponents"
        app:layout_constraintTop_toBottomOf="@+id/title_cadastrarempresa"
        app:layout_constraintStart_toStartOf="/parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <EditText
        android:id="@+id/edit_nomeEmpresa"
        style="@style/Edit_Text"
        android:hint="Nome da Empresa"
        android:inputType="text"
        app:layout_constraintTop_toTopOf="@+id/ContainerComponents"
        app:layout_constraintStart_toStartOf="@+id/ContainerComponents"
        app:layout_constraintEnd_toEndOf="@+id/ContainerComponents"

        />

    <EditText
        android:id="@+id/edit_enderecoEmpresa"
        style="@style/Edit_Text"
        android:hint="EndereÃ§o da Recebimento"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@+id/edit_nomeEmpresa"
        app:layout_constraintStart_toStartOf="@+id/ContainerComponents"
        app:layout_constraintEnd_toEndOf="@+id/ContainerComponents"

        />

    <EditText
        android:id="@+id/edit_cnjpEmpresa"
        style="@style/Edit_Text"
        android:hint="CNJP da Empresa"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@+id/edit_enderecoEmpresa"
        app:layout_constraintStart_toStartOf="@+id/ContainerComponents"
        app:layout_constraintEnd_toEndOf="@+id/ContainerComponents"

        />

    <EditText
        android:id="@+id/edit_CepEmpresa"
        style="@style/Edit_Text"
        android:hint="CEP da Empresa"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@+id/edit_cnjpEmpresa"
        app:layout_constraintStart_toStartOf="@+id/ContainerComponents"
        app:layout_constraintEnd_toEndOf="@+id/ContainerComponents"

        />

    <Button
        android:id="@+id/buttonSalvar"
        style="@style/Button"
        android:text="Salvar"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_CepEmpresa"

        />



</androidx.constraintlayout.widget.ConstraintLayout>